{
  "authentication": {
    "sendLink": true,
    "tokenLife": 900000
  },
  "email": {
    "defaultFrom": "Medialist <noreply@medialist.io>",
    "mailUrl": "smtp://{{secrets.email.user}}:{{secrets.email.password}}@smtp.mailgun.org:587"
  },
  "embeds": {
    "userAgent": "'Mozilla/5.0 (Macintosh; Intel Mac OS X 10_12_4) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/57.0.2987.133 Safari/537.36'",
    "timeout": 10000
  },
  "public": {
    "uploadcare": {
      "publicKey": "{{secrets.uploadcare.public_key}}"
    },
    "intercom": {
      "appId": "{{intercom.appId}}"
    },
    "heapanalytics": {
      "appId": "2072876906"
    },
    "authentication": {
      "emailDomains": ["{{authentication.emailDomain}}"],
      "extraEmailDomains": ["medialist.io", "tableflip.io", "achingbrain.net"]
    },
    "attachSchemasToDatabase": true
  },
  "twitter": {
    "consumer_key": "{{secrets.twitter.consumer_key}}",
